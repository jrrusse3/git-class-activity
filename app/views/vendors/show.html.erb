<p id="notice"><%= notice %></p>

<p>
  <strong>Code:</strong>
  <%= @vendor.code %>
</p>

<p>
  <strong>Name:</strong>
  <%= @vendor.name %>
</p>

<table>

  <thead>
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Base price</th>
    <th>Unit price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @orders.where(:VENDOR_ID => @vendor.id).each do |order| %>
    <tr>
      <td><%= order.product.name %></td>
      <td><%= order.quantity %></td>
      <td><%= order.base_price %></td>
      <td><%= order.unit_price %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_vendor_path(@vendor) %> |
<%= link_to 'Back', vendors_path %>
