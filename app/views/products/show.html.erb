<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<table>

  <thead>
  <tr>
    <th>Vendor</th>
    <th>Base price</th>
    <th>Unit price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

<tbody>
<% @orders.where(:PRODUCT_ID => @product.id).each do |order| %>
  <tr>
    <td><%= order.vendor.name %></td>
    <td><%= order.base_price %></td>
    <td><%= order.unit_price %></td>

  </tr>
<% end %>
</tbody>
</table>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
